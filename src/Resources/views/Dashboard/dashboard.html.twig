{% extends "base.html.twig" %}

{% block head_stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/llehermes/app.css') }}" />
{% endblock %}

{% block head_javascript %}
    {{ parent() }}
    <script src="{{ asset('bundles/llehermes/app.js') }}"></script>
{% endblock %}

{% block main %}
    {{ parent() }}
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col-sm mb-2 mb-sm-0">
                <h2 class="page-header-title text-primary">{{ 'title.dashboard'|trans({}, 'LleHermesBundle') }}</h2>
            </div>
        </div>
    </div>

    {{ include('@LleHermes/Dashboard/_pager.html.twig') }}

    <div class="row my-2">
        {% for mail in mails %}
            <div class="col-4 mb-3">
                {% block card_mail %}
                    <div class="card h-100">
                        <a href="{{ path('lle_hermes_crudit_mail_show', {id: mail.id}) }}">
                            <div class="card-header bg-primary text-white">
                                {{ lle_hermes_get_templater(mail).subject }}
                            </div>
                        </a>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-6 p-2">
                                    {% block mail_statistics %}
                                        {% include '@LleHermes/layout/_mail_statistics.html.twig' with {'mail': mail} %}
                                    {% endblock %}
                                    {% include '@LleHermes/layout/status.html.twig' with {'status': mail.status, 'position': 'end'} %}
                                </div>
                                <div class="col-6 p-2">
                                    <div class="progress" title="{{ 'title.totalOpened'|trans({}, 'LleHermesBundle') }}">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: {{ mail.percentOpened }}%"
                                                aria-valuenow="{{ mail.percentOpened }}" aria-valuemin="0" aria-valuemax="100">
                                            {{ mail.percentOpened }}%
                                        </div>
                                    </div>
                                </div>
                                {% block percent_rate %}
                                    <div class="col-12 p-2">
                                        {% include '@LleHermes/layout/_sending_rate.html.twig' with {'mail': mail} %}
                                    </div>
                                {% endblock %}
                            </div>
                        </div>
                    </div>
                {% endblock %}
            </div>
        {% endfor %}
    </div>

    {{ include('@LleHermes/Dashboard/_pager.html.twig') }}
{% endblock %}
